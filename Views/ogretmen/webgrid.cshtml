@model List<OgrenciBilgiSistemi.Models.ogretmen>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Ogrencilerin Listesi";
    var ornekgrid = new WebGrid(source: Model, canPage: true, rowsPerPage: 10);
    ornekgrid.Pager(WebGridPagerModes.All);
}
<h2>ogretmen Listesi</h2>
<style type="text/css">
    .webgrid-table {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        font-size: 1.2em;
        width: 100%;
        display: table;
        border-collapse: separate;
        border: solid 1px #98BF21;
        background-color: white;
    }

        .webgrid-table td, th {
            border: 1px solid #98BF21;
            padding: 3px 7px 2px;
        }

    .webgrid-header {
        background-color: #A7C942;
        color: #FFFFFF;
        padding-bottom: 4px;
        padding-top: 5px;
        text-align: left;
    }

    .webgrid-footer {
    }

    .webgrid-row-style {
        padding: 3px 7px 2px;
    }

    .webgrid-alternating-row {
        background-color: #EAF2D3;
        padding: 3px 7px 2px;
    }
</style>
<div id="content">
    @ornekgrid.GetHtml(
    tableStyle: "webgrid-table",
    headerStyle: "webgrid-header",
    footerStyle: "webgrid-footer",
    alternatingRowStyle: "webgrid-alternating-row",
    rowStyle: "webgrid-row-style",
    columns: ornekgrid.Columns(
   ornekgrid.Column(columnName: "ogrenci_numara", header: "ogrenci_numara:"),
ornekgrid.Column(columnName: "Ders_Kodu", header: "Ders_Kodu:"),
ornekgrid.Column(columnName: "Ders_Adı", header: "Ders_Adı:"),
ornekgrid.Column(columnName: "Vize_Notu", header: "Vize_Notu:"),
ornekgrid.Column(columnName: "Final_Notu", header: "Final_Notu:")


))
</div>
